<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="show">
        <h1>
          <%= @cocktail.name %>
        </h1>
        <% if @cocktail.photo? %>
        <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
        <% end %>
        <h4>Doses</h4>
        <% @cocktail.doses.each do |d| %>
        <p><%= d.description + ' ' + d.ingredient.name %>
          <%= link_to "Edit dose", edit_cocktail_dose_path(d) %>
          <%= link_to "Delete dose", dose_path(d.id), method: :delete, data: { confirm: "Are you sure?"} %>
        </p>
        <% end %>

        <%= link_to "Add new dose", new_cocktail_dose_path(@cocktail.id) %>

        <p>
          <%= link_to "Edit cocktail", edit_cocktail_path(@cocktail.id) %>
        </p>
        <%= link_to "Delete cocktail", cocktail_path(@cocktail.id), method: :delete, data: { confirm: "Are you sure?"} %>
        <p>
          <%= link_to "Back to Cocktails", cocktails_path %>
        </p>
      </div>
    </div>
  </div>
</div>
<!-- remember the DELETE path is the same as the SHOW path
  delete dose : path = dose_path(d.id) inside the loop

-->

<h1>The cocktails</h1>

<div class="container">
  <div class="row">
    <% @cocktails.each do |c| %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to cocktail_path(c) do %>
      <div class="card"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
      url('<%= c.photo? ? (cl_image_path c.photo.path, height: 300, width: 400, crop: :fill) : "http://lorempixel.com/350/350/nightlife"%>')">
      <div class="card-description">
        <h2>  <%=c.name%></h2>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>


</div>
</div>

  <p>
    <%= link_to "New cocktail", new_cocktail_path, class: "btn btn-primary btn-lg"  %>
  </p>
